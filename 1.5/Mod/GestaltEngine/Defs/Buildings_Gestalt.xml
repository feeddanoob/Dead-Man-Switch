<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- Yes you need that mod to make this work -->
	<ThingDef ParentName="BuildingBase">
		<defName>DMS_GestaltEngine</defName>
		<label>Centralized Command Core</label>
		<description>An ultra-large computing core for large-scale command of mechs, It is a technology introduced by the colonial fleet while passing through a glitter world.</description>
		<thingClass>Building_WorkTable</thingClass>
		<graphicData>
			<texPath>Things/Building/CentralCommandCore</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(5,5)</drawSize>
			<shadowData>
				<volume>(5.03,1.0,4.25)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
			<damageData>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
		</graphicData>
		<uiIconPath>Things/Building/CentralCommandCore</uiIconPath>
		<size>(5,5)</size>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshAndRealTime</drawerType>
		<altitudeLayer>Building</altitudeLayer>
		<passability>Impassable</passability>
		<blockWind>true</blockWind>
		<castEdgeShadows>true</castEdgeShadows>
		<canOverlapZones>false</canOverlapZones>
		<fillPercent>1</fillPercent>
		<rotatable>false</rotatable>
		<statBases>
			<MaxHitPoints>2500</MaxHitPoints>
			<WorkToBuild>80000</WorkToBuild>
			<Flammability>0.5</Flammability>
			<Beauty>10</Beauty>
			<ResearchSpeedFactor>1.0</ResearchSpeedFactor>
		</statBases>
		<constructionSkillPrerequisite>10</constructionSkillPrerequisite>
		<costList>
			<Tungsteel>250</Tungsteel>
			<Steel>350</Steel> 
			<Neurocomputer>6</Neurocomputer>
			<ComponentControlChip>1</ComponentControlChip>
		</costList>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<designationCategory>DMS_Category</designationCategory>
		<hasInteractionCell>True</hasInteractionCell>
		<interactionCellOffset>(0,0,-3)</interactionCellOffset>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<building>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<ai_chillDestination>false</ai_chillDestination>
			<soundAmbient>GeothermalPlant_Ambience</soundAmbient>
			<destroySound>BuildingDestroyed_Metal_Big</destroySound>
			<buildingTags>
				<li>Mechanitor</li>
				<li>Gestalt</li>
			</buildingTags>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
			<li>PlaceWorker_PreventInteractionSpotOverlap</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>DMS_Mechlink</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_AffectedByFacilities">
				<linkableFacilities/>
			</li>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<basePowerConsumption>500</basePowerConsumption>
				<shortCircuitInRain>true</shortCircuitInRain>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="GestaltEngine.CompProperties_Upgradeable">
				<compClass>GestaltEngine.CompGestaltEngine</compClass>
				<upgrades>
					<li>
						<!-- level 0 -->
						<overlayGraphic>
							<texPath>Things/Building/CentralCommandCore</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(5,5)</drawSize>
						</overlayGraphic>
						<upgradeCooldownTicks>180000</upgradeCooldownTicks>
						<upgradeDurationTicks>60000</upgradeDurationTicks>
						<powerConsumption>1000</powerConsumption>						
						<totalMechBandwidth>12</totalMechBandwidth>
						<totalControlGroups>2</totalControlGroups>
					</li>
					<li>
						<!-- level 1 -->
						<overlayGraphic>
							<texPath>Things/Building/CentralCommandCore</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(5,5)</drawSize>
						</overlayGraphic>
						<upgradeCooldownTicks>180000</upgradeCooldownTicks>
						<downgradeCooldownTicks>180000</downgradeCooldownTicks>
						<upgradeDurationTicks>60000</upgradeDurationTicks>
						<downgradeDurationTicks>60000</downgradeDurationTicks>
						<powerConsumption>1500</powerConsumption>
						<researchPointsPerSecond>0.1</researchPointsPerSecond>
						<totalMechBandwidth>18</totalMechBandwidth>
						<totalControlGroups>3</totalControlGroups>
					</li>
					<li>
						<!-- level 2 -->
						<overlayGraphic>
							<texPath>Things/Building/CentralCommandCore</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(5,5)</drawSize>
						</overlayGraphic>
						<upgradeCooldownTicks>180000</upgradeCooldownTicks>
						<downgradeCooldownTicks>180000</downgradeCooldownTicks>
						<upgradeDurationTicks>60000</upgradeDurationTicks>
						<downgradeDurationTicks>60000</downgradeDurationTicks>
						<powerConsumption>2000</powerConsumption>
						<heatPerSecond>25</heatPerSecond>
						<researchPointsPerSecond>0.15</researchPointsPerSecond>
						<totalMechBandwidth>24</totalMechBandwidth>
						<totalControlGroups>4</totalControlGroups>
					</li>
					<li>
						<!-- level 3 -->
						<overlayGraphic>
							<texPath>Things/Building/CentralCommandCore</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(5,5)</drawSize>
						</overlayGraphic>
						<upgradeCooldownTicks>180000</upgradeCooldownTicks>
						<downgradeCooldownTicks>180000</downgradeCooldownTicks>
						<upgradeDurationTicks>60000</upgradeDurationTicks>
						<downgradeDurationTicks>60000</downgradeDurationTicks>
						<powerConsumption>3000</powerConsumption>
						<heatPerSecond>50</heatPerSecond>
						<researchPointsPerSecond>0.2</researchPointsPerSecond>
						<totalMechBandwidth>30</totalMechBandwidth>
						<totalControlGroups>4</totalControlGroups>
					</li>
					<li>
						<!-- level 4 -->
						<overlayGraphic>
							<texPath>Things/Building/CentralCommandCore</texPath>
							<graphicClass>Graphic_Single</graphicClass>
							<drawSize>(5,5)</drawSize>
						</overlayGraphic>
						<downgradeCooldownTicks>180000</downgradeCooldownTicks>
						<downgradeDurationTicks>60000</downgradeDurationTicks>
						<powerConsumption>5000</powerConsumption>
						<heatPerSecond>100</heatPerSecond>
						<researchPointsPerSecond>0.25</researchPointsPerSecond>
						<totalMechBandwidth>36</totalMechBandwidth>
						<totalControlGroups>5</totalControlGroups>
					</li>
				</upgrades>
			</li>
			<li Class="CompProperties_MeditationFocus">
				<statDef>MeditationFocusStrength</statDef>
				<focusTypes>
					<li>Minimal</li>
					<li MayRequire="VanillaExpanded.VPsycastsE">VPE_Science</li>
				</focusTypes>
				<offsets>
					<li Class="GestaltEngine.FocusStrengthOffset_PerGestaltLevel">
						<offset>0.05</offset>
					</li>
				</offsets>
			</li>
		</comps>
	</ThingDef>
</Defs>