<Defs>
	<!-- 口袋手槍 -->
	<ThingDef ParentName="DMS_BaseMakeableGun">
		<defName>DMS_KnuckledusterRevolver</defName>
		<label>Knuckleduster Revolver</label>
		<description>A minature self-defense weapon commonly found on midworlds, it barely takes up any space when folded. Knuckledsters accept multiple calibers and may also used as brassknuckles in a pinch.</description>
		<weaponClasses>
			<li>Ranged</li>
			<li>RangedLight</li>
			<li>ShortShots</li>
		</weaponClasses>	
		<weaponTags>
			<li>SimpleGun</li>
			<li>Revolver</li>
			<li>DMS_MechWeaponUltraLight</li>
			<li>CivilianGun</li>
		</weaponTags>
		<tradeTags>
			<li>WeaponRanged</li>
		</tradeTags>
		<uiIconScale>1.8</uiIconScale>
		<graphicData>
			<texPath>Things/Weapons/HumanWeapon/KnuckledusterRevolver</texPath>
			<drawSize>(0.7,0.7)</drawSize>
		</graphicData>
		<soundInteract>Interact_Revolver</soundInteract>		
		<statBases>
			<Mass>0.5</Mass>
			<AccuracyTouch>0.95</AccuracyTouch>
			<AccuracyShort>0.65</AccuracyShort>
			<AccuracyMedium>0.35</AccuracyMedium>
			<AccuracyLong>0.15</AccuracyLong>
			<RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
			<WorkToMake>2000</WorkToMake>
		</statBases>
		<recipeMaker>
			<recipeUsers>
				<li>TableMachining</li>
			</recipeUsers>
		    <researchPrerequisites>
      			<li>Gunsmithing</li>
				<li>DMS_EquipmentBasis</li>
    		</researchPrerequisites>
		</recipeMaker>	
		<costList>
			<Steel>20</Steel>
		</costList>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_Revolver</defaultProjectile>
				<warmupTime>0.3</warmupTime>
				<range>10.9</range>
				<soundCast>DMS_KnuckledusterRevolver_Shot</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>6</muzzleFlashScale>
			</li>
		</verbs>
		<tools Inherit="False">
			<li>
				<label>grip</label>
				<capacities>
				<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>blade</label>
				<capacities>
				  <li>Cut</li>
				</capacities>
				<power>12</power>
				<cooldownTime>1.5</cooldownTime>
			  </li>
			  <li>
				<label>point</label>
				<capacities>
				  <li>Stab</li>
				</capacities>
				<power>13</power>
				<cooldownTime>2</cooldownTime>
			  </li>
		</tools>
		<modExtensions>
			<li MayRequire="IssacZhuang.MuzzleFlash" Class="MuzzleFlash.MuzzleFlashProps">
				<def>MF_StandardMuzzleFalsh</def>
				<drawSize>0.5</drawSize>
				<offsets>
				  <li>(0.1,0)</li>
				</offsets>
			</li>
		</modExtensions>
	</ThingDef>

	<!-- 鎮暴機槍 -->
	<ThingDef ParentName="DMS_BaseMakeableGun">
		<defName>DMS_MiniMachineGun</defName>
