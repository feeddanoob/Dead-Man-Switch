        <hediffDef>DMS_ReinforcedFrame</hediffDef>
        <soundDef>DMS_EquipGear</soundDef>
        <targetBodyPartDefs/>
      </li>
    </comps>
  </ThingDef>

  <HediffDef>
    <defName>DMS_ReinforcedFrame</defName>
    <hediffClass>Hediff</hediffClass>
    <label>Reinforced Frame</label>
