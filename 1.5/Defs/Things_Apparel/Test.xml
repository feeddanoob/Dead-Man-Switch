<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="ApparelBase" Abstract="True">
		<defName>DMS_Apparel_TurretFrame</defName>
		<label>turret frame</label>
		<description>一種實驗性的射擊平台，能夠接受指令或獨立於穿戴者進行索敵與射擊。</description>
		<techLevel>Industrial</techLevel>
		<tickerType>Normal</tickerType>
		<drawerType>MapMeshAndRealTime</drawerType>
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<researchPrerequisite>DMS_Prosthetic</researchPrerequisite>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
		</recipeMaker>
		<costList>
			<Plasfiber>80</Plasfiber>
			<Steel>20</Steel>
			<Chemfuel>20</Chemfuel>
			<ComponentStamped>1</ComponentStamped>
		</costList>
		<tradeTags>
			<li>Clothing</li>
			<li>DMS_Clothing</li>
		</tradeTags>
		<graphicData>
			<texPath>Things/Apparel/HazardSuit/Icon</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingCategories>
			<li>ApparelMisc</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>10</Mass>
			<ArmorRating_Sharp>0.1</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.4</ArmorRating_Blunt>
			<ArmorRating_Heat>0.8</ArmorRating_Heat>
			<Insulation_Cold>20</Insulation_Cold>
			<Insulation_Heat>9</Insulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MoveSpeed>-0.5</MoveSpeed>
		</equippedStatOffsets>
		<apparel>
			<bodyPartGroups>
				<li>Shoulders</li>
				<li>Torso</li>
				<li>Legs</li>
				<li>Arms</li>
				<li>Hands</li>
				<li>Feet</li>
			</bodyPartGroups>
			<renderNodeProperties>
				<li>
					<debugLabel>exoframe top</debugLabel>
					<nodeClass>PawnRenderNode</nodeClass>
					<workerClass>PawnRenderNodeWorker</workerClass>
					<parentTagDef>Body</parentTagDef>
					<baseLayer>60</baseLayer>
					<drawSize>1.75</drawSize>
					<pawnType>Any</pawnType>
					<useGraphic>true</useGraphic>
					<texPath>Things/Synthroid/BigSister/exosuit_top</texPath>
					<drawData>
						<defaultData>
							<layer>60</layer>
							<offset>(0,0,0)</offset>
						</defaultData>
					</drawData>
				</li>
				<li>
					<debugLabel>exoframe bottom</debugLabel>
					<nodeClass>PawnRenderNode</nodeClass>
					<workerClass>PawnRenderNodeWorker</workerClass>
					<parentTagDef>Body</parentTagDef>
					<baseLayer>-5</baseLayer>
					<drawSize>1.75</drawSize>
					<pawnType>Any</pawnType>
					<useGraphic>true</useGraphic>
					<texPath>Things/Synthroid/BigSister/exosuit_btm</texPath>
					<drawData>
						<defaultData>
							<layer>-5</layer>
							<offset>(0,0,0)</offset>
						</defaultData>
					</drawData>
				</li>
			</renderNodeProperties>
			<parentTagDef>ApparelBody</parentTagDef>
			<immuneToToxGasExposure>true</immuneToToxGasExposure>
			<layers>
				<li>Shell</li>
			</layers>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
		</apparel>
		<comps>
			<li Class="DMS.CompProperties_ApparelTurretGun">
				<angleOffset>-90</angleOffset>
				<turretDef>DMS_SubMachineGunMounted</turretDef>
				<autoAttack>true</autoAttack>
				<attackUndrafted>false</attackUndrafted>
				<renderNodeProperties>
					<li>
						<nodeClass>DMS.PawnRenderNode_ApparelTurretGun</nodeClass>
						<workerClass>DMS.PawnRenderNodeWorker_ApparelTurretGun</workerClass>
						<parentTagDef>ApparelBody</parentTagDef>
						<rotDrawMode>Fresh, Rotting</rotDrawMode>
						<overrideMeshSize>1</overrideMeshSize>
						<baseLayer>20</baseLayer>
						<pawnType>Any</pawnType>
						<drawData>
							<defaultData>
								<pivot>(0.5,0.5)</pivot>
							</defaultData>
							<dataEast>
								<offset>(0.5,0,-0.5)</offset>
							</dataEast>
							<dataWest>
								<offset>(-0.75,0,0.6)</offset>
								<rotationOffset>180</rotationOffset>
							</dataWest>
							<dataSouth>
								<offset>(-0.6,0,-0.5)</offset>
							</dataSouth>
							<dataNorth>
								<offset>(0.6,0,0.9)</offset>
							</dataNorth>
						</drawData>
					</li>
				</renderNodeProperties>
			</li>
		</comps>
	</ThingDef>
</Defs>