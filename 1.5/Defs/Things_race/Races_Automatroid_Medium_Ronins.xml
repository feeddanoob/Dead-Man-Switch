<Defs>
  <!-- 浪人 ronin-->
  <ThingDef ParentName="BaseAutomatroidHumanRace">
    <defName>DMS_Mech_Ronin</defName>
    <label>Ronin</label>
    <description>A Humanoid mech model specialized for urban combat, this unit is outfitted with assault armor and a mobility package making it a formidible foe in close quaters.</description>
    <statBases>
      <MoveSpeed>5</MoveSpeed>
      <ArmorRating_Blunt>0.7</ArmorRating_Blunt>
      <ArmorRating_Sharp>1.2</ArmorRating_Sharp>
      <ArmorRating_Heat>1.5</ArmorRating_Heat>
      <MeleeDodgeChance>15</MeleeDodgeChance>
      <MeleeHitChance>1.2</MeleeHitChance>
      <AimingDelayFactor>0.9</AimingDelayFactor>
      <BandwidthCost MayRequire="Ludeon.Rimworld.Biotech">3</BandwidthCost>
      <WastepacksPerRecharge MayRequire="Ludeon.Rimworld.Biotech">2</WastepacksPerRecharge>
    </statBases>
    <race>
      <body>DMS_Humanoid_TypeB_Ronin</body>                                                      <!--身體(另外的def)-->
      <baseBodySize>1.2</baseBodySize>
      <baseHealthScale>1.32</baseHealthScale>
      <mechWeightClass>Medium</mechWeightClass>
    </race>
    <modExtensions>
      <li Class="DMS.MechWeaponExtension">
        <EnableWeaponFilter>true</EnableWeaponFilter>
        <UsableWeaponTags>
          <li>SimpleGun</li>
          <li>ShortShots</li>
          <li>DMS_MechWeaponShotgun</li>
          <li>DMS_MechWeaponLight</li>
          <li>A_AR_LongRifle</li>
          <li>MedievalMeleeBasic</li>
          <li>MedievalMeleeAdvanced</li>
          <li>DMS_MeleeWeapon</li>
          <li>UltratechMelee</li>
          <li>A_AP</li>
        </UsableWeaponTags>
        <EnableTechLevelFilter>true</EnableTechLevelFilter>
        <UsableTechLevels>
          <li>Medieval</li>
          <li>Industrial</li>
          <li>Spacer</li>
          <li>Ultra</li>
        </UsableTechLevels>
        <BypassUsableWeapons/>
      </li>
    </modExtensions>
    <butcherProducts>
      <Tungsteel>5</Tungsteel>
      <Steel>5</Steel>
    </butcherProducts>
    <tools Inherit="False">
      <li>
        <label>right arm blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>RightBlade</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>6</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <chanceFactor>0.1</chanceFactor>
      </li>
      <li>
        <label>left arm blade</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>18</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>LeftBlade</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>6</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
        <chanceFactor>0.1</chanceFactor>
      </li>
    </tools>
  </ThingDef>

