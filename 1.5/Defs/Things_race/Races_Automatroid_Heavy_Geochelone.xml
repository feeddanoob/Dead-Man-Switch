      <MoveSpeed>2.5</MoveSpeed><!--移動速度-->
      <ArmorRating_Sharp>1.5</ArmorRating_Sharp><!--銳抗-->
      <ArmorRating_Blunt>1.3</ArmorRating_Blunt><!--鈍抗-->
