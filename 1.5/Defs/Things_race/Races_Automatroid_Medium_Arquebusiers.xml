        <BypassUsableWeapons>
          <li MayRequire="ceteam.combatextended">Gun_BinocularsRadio</li>
        </BypassUsableWeapons>
      </li>
      <li Class="DMS.TurretMannableExtension"/>
    </modExtensions>
  </ThingDef>
  
