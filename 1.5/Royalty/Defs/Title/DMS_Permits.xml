          </li>
          <li>
            <title>DMS_PreSergeant</title>
            <level>2</level>
          </li>
          <li>
            <title>DMS_Sergeant</title>
            <level>3</level>
          </li>
          <li>
            <title>DMS_WarrantOfficer</title>
            <level>4</level>
          </li>
          <li>
            <title>DMS_Lieutenant</title>
            <level>5</level>
          </li>
          <li>
            <title>DMS_Captain</title>
            <level>6</level>
          </li>
          <li>
            <title>DMS_Major</title>
            <level>7</level>
          </li>
          <li>
            <title>DMS_Colonel</title>
            <level>8</level>
          </li>
          <li>
            <title>DMS_Brigadier</title>
            <level>9</level>
          </li>
        </titles>
      </li>
    </modExtensions>
  </RoyalTitlePermitDef>

