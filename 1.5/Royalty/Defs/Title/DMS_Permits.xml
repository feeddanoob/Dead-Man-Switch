    </royalAid>
  </RoyalTitlePermitDef>

  <!-- 帶寬支援 -->
  <RoyalTitlePermitDef>
    <defName>DMS_Bandwidth</defName>
    <label>Bandwidth Support</label>
    <description>Apply for access to the orbital bandwidth support network, increasing the the amount of mechanoid bandwidth available to the user based on their applicant's title. This support will be available unless death or defection occurs.</description>
    <workerClass>DMS.RoyalTitlePermitWorker_Bandwidth</workerClass>
    <minTitle>DMS_Corporal</minTitle>
    <faction>DMS_Army</faction>
    <permitPointCost>1</permitPointCost>
    <uiPosition>(0,2)</uiPosition>
    <cooldownDays>30</cooldownDays>
    <royalAid>
      <favorCost>1</favorCost>
    </royalAid>
    <modExtensions>
      <li Class="DMS.BandwidthSupportExtension">
        <hediff>DMS_OrbitalService</hediff>
        <titles>
          <li>
            <title>DMS_Corporal</title>
