<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<MVCF.ModDef>
		<defName>DMS_MVCF_Def</defName>
		<label>DMS</label>
		<description>nothing here</description>
		<ActivateFeatures>
			<li>ExtraEquipmentVerbs</li>
			<li>IntegratedToggle</li>
		</ActivateFeatures>
	</MVCF.ModDef>

	<!--2A38 / TWS 30mm 駭蜥的主武器-->
	<ThingDef ParentName="DMS_AutomatroidHeavyGun" Abstract="True">
		<defName>DMS_Tarbosaurus_Gun</defName>
		<label>2A38 / TWS</label>
		<description>2A38 / Tarbosaurus Weapon System included heavy autocannon with anti air missile launcher for infantry suppress / anti air platform.\n\nThis weapon is designed specially for automatroid use, and it's too heavy so only specific automatroid can operate.</description>	
		<descriptionHyperlinks>	
			<ThingDef>DMS_Mech_Tarbosaurus</ThingDef>
		</descriptionHyperlinks>
		<weaponTags>
			<li>DMS_Tarbosaurus_Gun</li>
		</weaponTags>
		<equippedDistanceOffset >-0.3</equippedDistanceOffset >
		<graphicData>
			<texPath>Things/Weapons/DMS_Weapon_2A38TWS</texPath>
			<drawSize>3</drawSize>
		</graphicData>
		<statBases>
			<Mass>300</Mass>
			<WorkToMake>120000</WorkToMake>
			<MarketValue>1200</MarketValue>
			<AccuracyTouch>0.75</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.80</AccuracyMedium>
			<AccuracyLong>0.75</AccuracyLong>
			<RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<researchPrerequisites>
				<li>DMS_HeavyAutomatroid</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>
			<Tungsteel>242</Tungsteel>
			<ComponentStamped>18</ComponentStamped>
			<ComponentSpacer>2</ComponentSpacer>
		</costList>
		<comps Inherit="False">
			<li Class="MVCF.Comps.CompProperties_VerbProps">
				<compClass>CompEquippable</compClass>
				<verbProps>
					<li>
						<label>LaunchSAM</label>						
						<visualLabel>launch SAM</visualLabel>
						<description>launch 9M311 missile</description>
						<canBeToggled>true</canBeToggled>
						<comps>
							<li Class="MVCF.VerbComps.VerbCompProperties_Turret">
							<compClass>MVCF.VerbComps.VerbComp_Turret</compClass>
						  </li>
							<li Class="MVCF.VerbComps.VerbCompProperties_Cooldown">
								<compClass>MVCF.VerbComps.VerbComp_Cooldown</compClass>
								<cooldownTime>15</cooldownTime>
							</li>
							<li Class="MVCF.Reloading.Comps.VerbCompProperties_Reloadable">
								<compClass>MVCF.Reloading.Comps.VerbComp_Reloadable</compClass>
								<AmmoFilter>
									<thingDefs>
										<li>Shell_HighExplosive</li>
									</thingDefs>
								</AmmoFilter>
								<ItemsPerShot>1</ItemsPerShot>
								<MaxShots>4</MaxShots>
								<ReloadSound>Reload_Standard</ReloadSound>
								<ReloadTimePerShot>10</ReloadTimePerShot>
							</li>
						</comps>
					</li>
				</verbProps>
			</li>
			<li Class="CompProperties_Forbiddable"/>
			<li Class="CompProperties_Styleable"/>
		</comps>
		<verbs>
			<li>
				<label>2A38 / TWS</label>
				<verbClass>Verb_Shoot</verbClass>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>DMS_Bullet_CIWS</defaultProjectile>
				<requireLineOfSight>true</requireLineOfSight>
				<warmupTime>2.45</warmupTime>
				<minRange>5.9</minRange>
				<range>44.9</range>
				<ai_AvoidFriendlyFireRadius>6.9</ai_AvoidFriendlyFireRadius>
				<ticksBetweenBurstShots>5</ticksBetweenBurstShots>
				<burstShotCount>10</burstShotCount>
				<soundCast>DMS_Shot_Tunguska</soundCast>
				<soundCastTail>GunTail_Heavy</soundCastTail>
				<muzzleFlashScale>15</muzzleFlashScale>
				<consumeFuelPerShot>1</consumeFuelPerShot>
				<targetParams>
				<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<forcedMissRadius>0.2</forcedMissRadius>
			</li>
			<li>
				<label>LaunchSAM</label>
				<verbClass>Verb_LaunchProjectileStatic</verbClass>
				<onlyManualCast>True</onlyManualCast>
				<range>89.9</range>
				<forcedMissRadius>0.6</forcedMissRadius>
				<commandIcon>Things/Icon/Test</commandIcon>
				<hasStandardCommand>true</hasStandardCommand>
				<burstShotCount>1</burstShotCount>
				<warmupTime>3.5</warmupTime>
				<noiseRadius>4</noiseRadius>
				<soundCast>Shot_IncendiaryLauncher</soundCast>
				<soundCastTail>GunTail_Medium</soundCastTail>
				<muzzleFlashScale>14</muzzleFlashScale>
				<drawHighlightWithLineOfSight>true</drawHighlightWithLineOfSight>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
				<defaultProjectile>Bullet_9M311V</defaultProjectile>
				<rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
			</li>
		</verbs>
	</ThingDef>

	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_9M311V</defName>
		<label>9M311</label>
		<graphicData>
		  <texPath>Things/Ammo/76mm9M311Missile/Projectile</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<thingClass>Projectile_Explosive</thingClass>
		<projectile>
		  <damageDef>Bomb</damageDef>
		  <damageAmountBase>150</damageAmountBase>
		  <armorPenetrationBase>1.75</armorPenetrationBase>
          <stoppingPower>5</stoppingPower>
          <arcHeightFactor>1</arcHeightFactor>
          <shadowSize>1</shadowSize>
		  <explosionRadius>3.9</explosionRadius>
		  <speed>75</speed>
		</projectile>
	</ThingDef>
</Defs>