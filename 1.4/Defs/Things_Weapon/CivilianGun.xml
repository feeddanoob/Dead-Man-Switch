		<graphicData>
			<texPath>Things/Weapons/HumanWeapon/KnuckledusterRevolver</texPath>
			<drawSize>(0.7,0.7)</drawSize>
		</graphicData>
		<soundInteract>Interact_Revolver</soundInteract>		
		<statBases>
			<Mass>0.5</Mass>
			<AccuracyTouch>0.95</AccuracyTouch>
