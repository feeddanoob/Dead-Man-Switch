			<AccuracyLong>0.75</AccuracyLong>
			<RangedWeapon_Cooldown>2.5</RangedWeapon_Cooldown>
		</statBases>
		<recipeMaker>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<researchPrerequisites>
				<li>DMS_EquipmentHeavy</li>
				<li>HeavyTurrets</li>
			</researchPrerequisites>
		</recipeMaker>
		<costList>
			<Tungsteel>120</Tungsteel>
			<ComponentStamped>8</ComponentStamped>
		</costList>
